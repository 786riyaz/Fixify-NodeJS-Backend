{
  "info": {
    "_postman_id": "fixify-bookings-collection",
    "name": "Fixify Booking API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Fixify Booking System (Admin, Customer, Contractor)"
  },
  "item": [
    {
      "name": "AUTH â†’ Set Token",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        },
        "description": "Login to get token (token stored in {{token}} variable manually)"
      }
    },
    {
      "name": "BOOKINGS",
      "item": [
        {
          "name": "Get All Bookings (Admin / Contractor / Customer)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings?limit=10&page=1&sort=-createdAt",
              "host": ["{{base_url}}"],
              "path": ["bookings"],
              "query": [
                { "key": "limit", "value": "10" },
                { "key": "page", "value": "1" },
                { "key": "sort", "value": "-createdAt" }
              ]
            }
          }
        },
        {
          "name": "Get Single Booking",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/{{bookingId}}",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{bookingId}}"]
            }
          }
        },
        {
          "name": "Create Booking (Customer/Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"service_id\": \"{{serviceId}}\",\n  \"customer_id\": \"{{customerId}}\",\n  \"address\": {\n    \"line1\": \"Street 12\",\n    \"city\": \"Mumbai\",\n    \"postalCode\": \"400001\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings",
              "host": ["{{base_url}}"],
              "path": ["bookings"]
            }
          }
        },
        {
          "name": "Update Booking (Role-based)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"address\": {\n    \"line1\": \"Updated Address\",\n    \"city\": \"Delhi\",\n    \"postalCode\": \"110001\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings/{{bookingId}}",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{bookingId}}"]
            }
          }
        },
        {
          "name": "Cancel Booking (Customer/Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/{{bookingId}}/cancel",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{bookingId}}", "cancel"]
            }
          }
        },
        {
          "name": "Delete Booking (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/{{bookingId}}",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{bookingId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "ASSIGNMENT / REJECTION",
      "item": [
        {
          "name": "Assign Contractor (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contractor_id\": \"{{contractorId}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings/{{bookingId}}/assign",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{bookingId}}", "assign"]
            }
          }
        },
        {
          "name": "Reject Booking (Contractor/Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{contractorId}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings/{{bookingId}}/reject",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{bookingId}}", "reject"]
            }
          }
        }
      ]
    },
    {
      "name": "CUSTOMER FILTERS",
      "item": [
        {
          "name": "Get Bookings by Customer",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/customer/{{customerId}}?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["bookings", "customer", "{{customerId}}"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "CONTRACTOR FILTERS",
      "item": [
        {
          "name": "Get Bookings by Contractor",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/contractor/{{contractorId}}?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["bookings", "contractor", "{{contractorId}}"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Rejected Bookings of Contractor",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/contractor/{{contractorId}}/rejected",
              "host": ["{{base_url}}"],
              "path": ["bookings", "contractor", "{{contractorId}}", "rejected"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" },
    { "key": "bookingId", "value": "" },
    { "key": "customerId", "value": "" },
    { "key": "contractorId", "value": "" },
    { "key": "serviceId", "value": "" }
  ]
}
